@model SimpleNews.Areas.Admin.ViewModels.CategoriesNew
@{
    ViewBag.Page = "Kategoriler";
    ViewBag.Title = "Kategori Yönetimi";
    ViewBag.Description = "Kategori yönetim ekranı";
}

<h2>Yeni Kategori Tanımlama</h2>

<div class="row">
    <div class="col-md-6">

        <div class="btn-group">
            <button class="btn sbold green" onclick="location.href='@Url.Action("Index")'">
                Kategori Listesi
                <i class="fa fa-chevron-left"></i>
            </button>
        </div>
    </div>
</div>
<br />
@Html.Raw(@ViewBag.Message)
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-default" />
            </div>
        </div>
    </div>
}
